{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block ariane %}
    <div class="container">
        <div class="col-md-12 ariane">{{'Mentions l√©gales'|trans|upper}}</div>
    </div>
{% endblock %}
{% block body %}
    <div id="main-content" class="container">


        {{ form_start(form)}}


        <div class="row">
            
            <div class="col-md-12">
                {{ form_row(form.text) }}
                {{ form_row(form.active) }}
            </div>

        </div>

        <div class="row col-md-12">
            <button class='btn-fridging-blue'>{{'Enregistrer'|trans}}</button>


        </div>
        {{ form_rest(form) }}
        {{ form_end(form)}}

    </div>
</div>
{% endblock %}
{% block js %}

    <script>
        $(document).ready(function() {

            tinymce.init({
                plugins: "link",
                forced_root_block: false,
                force_br_newlines: true,
                force_p_newlines: false,
                selector: "textarea",
                height: 600
            });

        


        });
      


    </script>

{% endblock %}

