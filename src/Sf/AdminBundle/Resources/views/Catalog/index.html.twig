{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block ariane %}
    <div class="container">
        <div class="col-md-12 ariane">{{'Catalogues'|trans|upper}}</div>
    </div>
{% endblock %}
{% block body %}
    <div id="main-content" class="container">
        {% if lastCatalog is null %}

            <div class="alert alert-info">{{'Aucun catalogue principal sauvegardé'}}</div>
            <div style="margin-top:20px;">   
                <a href="{{ path('admin_catalog_last') }}">
                    <button type="button" class="btn-fridging-blue">{{'Nouveau catalogue principal'|trans}}</button>
                </a>
            </div>

        {% else %}
            <div class="col-md-12">
                <div class="col-md-4">
                    <h2>{{lastCatalog.title}}</h2>
                    <div>{{lastCatalog.text|raw}}</div>
                    <div style="margin-top:20px;">   
                        <a href="{{ path('admin_catalog_last',{'lastCatalog' : lastCatalog.id }) }}">
                            <button type="button" class="btn-fridging-blue">{{'Mise à jour du catalogue principal'|trans}}</button>
                        </a>
                    </div>
                </div>
                <div class="col-md-7">
                    {% if lastCatalog.pictureUrl is not null %}
                        {% if lastCatalog.fileUrl is not null %}
                            <a target="_blank" href="{{asset('/uploads/catalogs/'~lastCatalog.fileUrl)}}">
                            {% endif %}
                            <img style="max-width:365px;width: 100%" src="{{ asset(['/uploads/catalogs/', lastCatalog.pictureUrl]|join) }}" />
                            {% if lastCatalog.fileUrl is not null %}
                            </a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endif %}
        <div  class="clearfix"></div>
        <div style="margin-top:20px" class="table-responsive">
            <table class="table table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        
                        <th>{{'Marque'|trans}}</th>
                        <th>{{'Année'|trans}}</th>
                        <th>{{'Fichier'|trans}}</th>
                        <th>{{'Actions'|trans}}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in catalogs %}
                        <tr>

                            <td>{{ entity.brand.name }}</td>
                            <td>{{ entity.yearLabel }}</td>
                            <td>
                                {% if entity.fileUrl is not null %}
                                    <a target="_blank" href="{{asset('/uploads/catalogs/'~entity.fileUrl)}}">{{'Télécharger'|trans}}</a>
                                    {% endif %}
                            </td>
                            <td> 
                                <a title="Modifier" href="{{ path('admin_catalog_update', { 'catalog' : entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('admin_catalog_update') }}">
                <button type="button" class="btn-fridging-blue">{{'Nouveau catalogue'|trans}}</button>
            </a>
        </div>

    </div>
{% endblock %}
