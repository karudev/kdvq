{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block css %}
    <link href="{{asset('bundles/sffront/css/categories.css')}}?v={{version}}" rel="stylesheet">
{% endblock %} 
{% block ariane %}
    CLUBS ET PARTENAIRES
{% endblock %}
{% block bandeauClass %}
account
{% endblock %}
{% block body %}
    <div id="main-content"  class=" col-md-10">


        {{ form_start(form)}}


        <div class="col-md-12">
            <div class="col-md-6">
                {{ form_row(form.active) }}

                {{ form_label(form.picture) }}
                <br/>
                 <div class="alert alert-info">Il est conseill√© d'uploader une photo d'un ratio de 2 pour les clubs (ex: 194px X 93px) et 1.4 pour les partenaires (ex: 129px X 92px )</div>
           
                {% if form.vars.data.pictureUrl is not null %}
                    <img src="{{ asset(['/uploads/partners/', form.vars.data.pictureUrl]|join) }}" />
                {% endif %}
                {{ form_widget(form.picture) }}
                {{ form_errors(form.picture) }}
                {{ form_row(form.title) }}
                {{ form_row(form.type) }}

            </div>
            <div class="col-md-6">

            </div>


        </div>

        <div class="">
            <a href="{{ path('admin_partner') }}" style="color:black">
                <button type="button" class="submit" style="margin-right:10px">
                    Retour
                </button>
            </a>
            <button type="submit" class="submit" style="margin-right:10px">
                    Enregistrer
                </button>
                {{ form_rest(form) }}
           
            {{ form_end(form)}}

        </div>
    </div>
{% endblock %}
