{% block contact_widget%}
    {{ form_widget(form) }}

    <a href="#" id="add_contactList">ajouter un contact</a>

    <script>
        $(document).ready(function() {

            var containerImage = $('#contact_contactLists');

            function add_step() {
                index = containerImage.children().length;
                containerImage.append(
                        $(containerImage.attr('data-prototype').replace(/__name__/g, index))
                        );

            }

            $('#add_contactList').click(function() {
                event.preventDefault();
                add_step();
            });


            $('.remove_contactList').click(function() {
                event.preventDefault();
                $(this).parent().remove();
            });
        });

    </script>

{% endblock %}
