{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block css %}
    <link href="{{asset('bundles/sfadmin/css/account.css')}}?v={{version}}" rel="stylesheet">
{% endblock %}  
{% block body %}
    <div id="main-content" class="col-md-10">
        <h1>{{'Mon compte'|trans}}</h1>
        {% include 'SfAdminBundle:Account:submenu.html.twig' %}
        <div class="col-xs-8 col-xs-offset-2  well">
        <div class="col-xs-12 ">
          
            <div class="form-group">
                <div class="col-xs-3"><label>{{'Nom commerciale'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.tradeName}}</div>
                <div class="col-xs-3"><label>{{'Nom social'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.socialName}}</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <div class="col-xs-3"><label>{{'Siret'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.siret}}</div>
                <div class="col-xs-3"><label>{{'Ville'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.country}}</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <div class="col-xs-3"><label>{{'Email'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.email}}</div>
                <div class="col-xs-3"><label>{{'Téléphone'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.phone}}</div>
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <div class="col-xs-3"><label>{{'Tva'|trans}} :</label></div>
                <div class="col-xs-3">{{app.user.tva}} %</div>

                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-xs-12">
           <div class="col-xs-6">
            <b>{{'Adresse de livraison'|trans}}</b>
            {% set shipping = getAddress(app.user,'shipping') %}
            <p>


            {% if shipping.title is not null %}
                {{shipping.title}}    <br/>
            {% endif %}
            {{shipping.address}}
            {{shipping.additionalAddress}}<br/>
            {{shipping.zipCode}} {{shipping.city}}, {{shipping.country}} 
            </p>
           </div>
            <div class="col-xs-6">
            <b>{{'Adresse de facturation'|trans}}</b>
            {% set billing = getAddress(app.user,'billing') %}
            <p>


            {% if billing.title is not null %}
                {{billing.title}}    <br/>
            {% endif %}
            {{billing.address}}
            {{billing.additionalAddress}}<br/>
            {{billing.zipCode}} {{billing.city}}, {{billing.country}} 
            </p>
           </div>
        </div>
             <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
