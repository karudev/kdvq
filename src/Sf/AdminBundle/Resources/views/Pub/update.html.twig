{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block css %}
    <link href="{{asset('bundles/sffront/css/categories.css')}}?v={{version}}" rel="stylesheet">
{% endblock %} 
{% block ariane %}
    <div class="sous-categorie">PUB</div>
{% endblock %}
{% block bandeauClass %}
    account
{% endblock %}
{% block body %}
    <div id="main-content"  class="col-md-10">


        {{ form_start(form)}}


        <div class="col-md-12">
            <div class="col-md-6">
                {{ form_row(form.active) }}

               
                {{ form_row(form.title) }}
                {{ form_row(form.link) }}
                {{ form_row(form.position) }}

            </div>
            <div class="col-md-6">
               {{ form_label(form.picture) }}
                <div class="alert alert-info">Il est conseill√© d'uploader une photo d'un ratio de 0.83 (ex: 890px X 1070px)</div>
         
                <br/>
                {% if form.vars.data.pictureUrl is not null %}
                    <img width="200px" src="{{ asset(['/uploads/pubs/', form.vars.data.pictureUrl]|join) }}" />
                {% endif %}
                {{ form_widget(form.picture) }}
                {{ form_errors(form.picture) }}
            </div>


        </div>

        <div class="col-md-12">
            <a href="{{ path('admin_pub') }}" style="color:black">
                <button type="button" class="submit" style="margin-right:10px">
                    {{'Retour'|trans}}
                </button>
            </a>
            <div class="pull-right">
                <button type="submit" class="submit" style="margin-right:10px">
                    {{'Enregistrer'|trans}}
                </button>
                {{ form_rest(form) }}
            </div>
            {{ form_end(form)}}

        </div>
    </div>
{% endblock %}
