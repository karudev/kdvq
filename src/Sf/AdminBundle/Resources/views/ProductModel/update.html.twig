{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block css %}
    <link href="{{asset('bundles/sffront/css/categories.css')}}?v={{version}}" rel="stylesheet">

{% endblock %}
{% block ariane %}
    Modification du mod√®le <div class="sous-categorie">{{productModel.product.name}}</div>
{% endblock %}
{% block bandeauClass %}
account
{% endblock %}
{% block body %}
    <div id="main-content"  class="container">


    <div class="col-md-10">
        <form action="{{path('admin_product_model_update',{number : productModel.number})}}" method="post">
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <div class="text-center">
                        <img width="300px" src="{{ asset(['/uploads/products/', productModel.product.mainPictureUrl]|join) }}" />
                    </div>
                </div>
                <div class="col-xs-6">
                   
                     
                     {{ form_row(form.size) }}
                     {{ form_row(form.color) }}
                     {{ form_row(form.material) }}
                    
                </div>
            </div>
          
            <div style="margin-top:50px;" class="col-xs-12 text-center">
                <button type="submit" class="submit">{{'Modifier'|trans}}</button>
            </div>
                     
                     <div class="hidden">
            {{ form_rest(form) }}
                     </div>
        </form>
        <div style="margin-top:50px;" class="col-xs-12">
            <a href="{{path('admin_product_model',{product:productModel.product.id})}}"><button class="submit">{{'Retour'|trans}}</button></a>
        </div>

    </div>



    </div>
{% endblock %}
