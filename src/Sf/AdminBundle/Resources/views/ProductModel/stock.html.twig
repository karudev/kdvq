{% extends 'SfFrontBundle::frontTemplate.html.twig' %}
{% block css %}
    <link href="{{asset('bundles/sffront/css/categories.css')}}?v={{version}}" rel="stylesheet">

{% endblock %}
{% block ariane %}
    Incrémentation du stock <div class="sous-categorie">{{product.name}}</div>
{% endblock %}
{% block body %}
    <div id="main-content" class="container">

    <div class="col-md-10">
        <form action="{{path('admin_product_model_stock')}}" method="post">
            <div class="col-xs-12">
                <div class="col-xs-6">
                    <div class="text-center">
                        <img width="300px" src="{{ asset(['/uploads/products/', product.mainPictureUrl]|join) }}" />
                    </div>
                </div>
                <div class="col-xs-6">
                    
                   <div class="form-group ">
                      <label  class="control-label">Quantité</label>
                      <div class="clearfix"></div>
                      <input type="integer" name="quantity" maxlength="4" value="1"  class="col-xs-2" />
                          <div class="clearfix"></div>
                   </div>
                
                  
                   
                     {{ form_row(form.size) }}
                     {{ form_row(form.color) }}
                     {{ form_row(form.material) }}
                    
                </div>
            </div>
          
            <div style="margin-top:50px;" class="col-xs-12 text-center">
                <button type="submit" class="submit">Ajouter</button>
            </div>
                     
                     <div class="hidden">
            {{ form_rest(form) }}
                     </div>
        </form>
        <div style="margin-top:50px;" class="col-xs-12">
            <a href="{{path('admin_product_model',{product:product.id})}}"><button class="submit">Retour</button></a>
        </div>

    </div>


    </div>

{% endblock %}
