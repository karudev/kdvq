{% extends "SfFrontBundle::frontTemplate.html.twig" %}
{% block css %}
     <link href="{{asset('bundles/sffront/css/categories.css')}}?v={{version}}" rel="stylesheet">
     <link href="{{asset('bundles/sffront/css/partner.css')}}?v={{version}}" rel="stylesheet">
{% endblock %}
{% block ariane %}
    Partenaires &amp; Clubs
{% endblock %}
{% block bandeauClass %}
    partners
{% endblock %}
{% block title %}Qwinsport - Partenaires &amp; Clubs{% endblock %}


{% block body %}

    <div id="main-content" class="container">

        <div class="col-sm-9 col-md-10">
            <div class="product actualite col-sm-12">

                <div class="article press part">
                    <h3 class="big-title">
                        Nos<br><span class="din-bold">Clubs</span><img src="{{asset('bundles/sffront/images/border.png')}}" class="border" alt="">
                    </h3><br/>
                    <div class="col-md-10 col-md-offset-1">
                        {% for c in clubs %}
                        <div class="col-md-4 text-center club">
                            <img style="" src="{{ asset(['/uploads/partners/', c.pictureUrl]|join) }}" />
                            <h4>{{c.title}}</h4>
                        </div>
                        {% endfor %}
                       
                    </div>
                        {% if catalog.fileUrl is defined %}
                    <div class="bloc-separation">
                        <div class="separation"></div>
                        <h2>Catalogue des offres clubs {{'now'|date('Y')}}/{{'now'|date('Y')+1}}</h2>
                        <a target="_blank" href="{{asset('/uploads/catalogs/'~catalog.fileUrl)}}">
                            <div class="dl">En téléchargement</div>
                        </a>
                        <div class="separation"></div>
                    </div>
                            {% endif %}
                            <hr/>
                    <h3 class="big-title">
                        Nos<br><span class="din-bold">Partenaires</span><img src="{{asset('bundles/sffront/images/border.png')}}" class="border" alt="">
                    </h3><br/>
                    <div class="partenaire">
                        <div class="col-md-3"></div>
                      <div class="col-md-8 col-md-offset-2">
                        {% for p in partners %}
                        <div class="col-md-4 text-center club">
                            <img style="" src="{{ asset(['/uploads/partners/', p.pictureUrl]|join) }}" />
                            <h4>{{p.title}}</h4>
                        </div>
                        {% endfor %}
                       
                    </div><br/>
                        <div class="bloc-separation">
                            <a href="{{path('front_contact')}}" title="">
                                <div class="dl">Faire partie des partenaires</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

