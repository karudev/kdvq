{% extends "SfFrontBundle::frontTemplate.html.twig" %}
{% block css %}
     <link href="{{asset('bundles/sffront/css/categories.css')}}?v={{version}}" rel="stylesheet">
{% endblock %}
{% block ariane %}
  Contact
{% endblock %}
{% block bandeauClass %}
  contact
{% endblock %}
{% block body %}

    <div id="main-content" class="container">
        <div class="col-md-8 col-md-offset-2 contact-info">
            <h2>Nous contacter</h2>
            <div class="col-md-12 contact-info">
                {{'Pour toute information sur nos produits, utilisez le formulaire de contact ou contactez nous au : <br/><strong>+33 6 31 55 07 31</strong>'|raw}}
            </div>
            <form action="{{path('front_contact')}}" method="post">
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'Nom'|trans}}* :</label></div>
                    <div class="col-lg-4"><input class="required" name="lastname" type="text"/></div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'Prénom'|trans}} :</label></div>
                    <div class="col-lg-4"><input class="" name="firstname" type="text"/></div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'Société'|trans}} :</label></div>
                    <div class="col-lg-4"><input class="" name="company" type="text"/></div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'Téléphone'|trans}}* :</label></div>
                    <div class="col-lg-4"><input class="required" name="phone" type="text"/></div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'E-mail'|trans}}* :</label></div>
                    <div class="col-lg-4"><input class="required" name="email" type="email"/></div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'Sujet'|trans}}* :</label></div>
                    <div class="col-lg-4"><input class="required" name="subject" type="text"/></div>
                </div>

                <div class="form-group col-lg-12">
                    <div class="col-lg-2"><label>{{ 'Message'|trans}}* :</label></div>
                    <div class="col-lg-9">
                        <textarea rows="10" name="message" class="required"></textarea>
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-9 text-center">
                        <button type="submit" class="submit">{{ 'Envoyer'|trans}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



{% endblock %}
